.container.min-vh-100
  .row.min-vh-100.justify-content-center.align-items-center.flex-column
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'card w-50' }) do |f|
      .card-header.bg-primary.text-white
        %h2.text-center Log in
      .card-body
        .form-inputs
          = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }
          = f.input :password, required: false, input_html: { autocomplete: "current-password" }
          = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-actions.text-center
          = f.button :submit, "Log in", class: 'btn btn-primary'
      .card-footer.d-flex.justify-content-between
        = render "users/shared/links"
