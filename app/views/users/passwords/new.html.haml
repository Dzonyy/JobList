.container.min-vh-100
  .row.min-vh-100.justify-content-center.align-items-center.flex-column
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'card w-50' }) do |f|
      .card-header.bg-primary.text-white
        %h2.text-center Forgot your password?
      .card-body
        .form-inputs
          = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }
        .form-actions.text-center
          = f.button :submit, "Send me reset password instructions", class: 'btn btn-primary'
      .card-footer.d-flex.justify-content-between
        = render "users/shared/links"