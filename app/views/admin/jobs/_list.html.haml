%table.table.table-hover.table-bordered.table_box.table-responsive-md
  %thead
    %tr.d-flex
      %th.col-10= admin_label('title')
      %th.col-2.actions= t('simple_form.labels.actions')
  %tbody
    - resources.each do |resource|
      %tr.d-flex{ data: { id: resource.id } }
        %td.col-10= resource.name
        %td.col-2.actions
          = render partial: 'list_actions', locals: { resource: resource }