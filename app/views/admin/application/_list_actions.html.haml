.table_actions
  -# = fa_icon "bars", class: 'table_actions--burger'
  .d-flex.justify-content-around
    - if edit_resource_path(resource.id).present? && can?(:edit, resource)
      = link_to edit_resource_path(resource.id), class: 'btn btn-warning' do
        Edytuj
    - if can?(:destroy, resource) && resource.can_delete?
      = link_to resource_path(resource.id), method: :delete, data: {confirm: t(:are_you_sure_to_destroy) }, class: 'btn btn-danger' do
        Usu≈Ñ