.container-fluid.h-100
  .row.h-100
    .col.align-self-center.justify-content-center
      %h2 Zapomniałeś hasła?
    .col.align-self-center.justify-content-center
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'esplori-form' }) do |f|
        .form-inputs
          = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }
        .form-actions
          = f.button(:submit, t('helpers.submit.customer.change_password'))

      = link_to 'Logowanie', new_session_path(resource_name)