.container-fluid.h-100
  .row.h-100
    .align-self-center.text-center.bg-primary.h-100.d-flex.flex-column.justify-content-center.col-6
      %h1.display-2.text-white Zapomniałeś hasła?
    .col.align-self-center.text-center
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'employee_form col-6 mx-auto' }) do |f|
        = f.error_notification
        = f.input :reset_password_token, as: :hidden
        = f.full_error :reset_password_token
        .form-inputs
          = f.input :password, label: "Nowe hasło", required: true, autofocus: true, hint: ("#{@minimum_password_length} znaków minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }                                          |
          = f.input :password_confirmation, label: "Potwierdź hasło", required: true
        .form-actions.text-center.mb-3
          = f.button :submit, "Zmień hasło", class: 'btn btn-success'
      .text-center
        = link_to 'Logowanie', new_session_path(resource_name)