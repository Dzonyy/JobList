- title 'Logowanie - panel administracyjny'
.container-fluid
  .row
    .col
      %h2 Zaloguj się
    .col
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'esplori-form' }) do |f|
        .form-inputs
          = f.input :email, input_html: { autofocus: true }
          = f.input :password, autocomplete: "off"
          - if devise_mapping.rememberable?
            = f.input :remember_me, as: :boolean, label: admin_label('remember_me', 'employee')

        .form-actions
          = f.button(:submit, t('helpers.submit.employee.sign_in'), class: 'btn')
      = link_to "Zapomniałeś hasła?", new_password_path(resource_name)